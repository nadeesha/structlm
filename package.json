{
  "name": "structlm",
  "version": "1.0.0",
  "description": "Structured output generation and data parsing tool geared towards LLMs",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nadeesha/structlm.git"
  },
  "bugs": {
    "url": "https://github.com/nadeesha/structlm/issues"
  },
  "homepage": "https://github.com/nadeesha/structlm",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "test": "node --import tsx --test src/test/*.test.ts",
    "test:watch": "node --import tsx --test --watch src/test/*.test.ts"
  },
  "keywords": ["llm", "ai", "schema", "typescript", "validation", "structured-output", "openai", "anthropic", "claude", "gpt"],
  "author": "Nadeesha Cabral",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@types/node": "^24.0.13",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
