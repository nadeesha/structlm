{
  "name": "structlm",
  "version": "1.2.0",
  "description": "Structured output generation and data parsing tool geared towards LLMs",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nadeesha/structlm.git"
  },
  "bugs": {
    "url": "https://github.com/nadeesha/structlm/issues"
  },
  "homepage": "https://github.com/nadeesha/structlm",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "test": "node --import tsx --test src/test/*.test.ts",
    "test:watch": "node --import tsx --test --watch src/test/*.test.ts",
    "benchmark:simple": "node --import tsx src/benchmarks/runners/simple-object.ts",
    "benchmark:complex": "node --import tsx src/benchmarks/runners/complex-object.ts",
    "benchmark:validation": "node --import tsx src/benchmarks/runners/validation-hints.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "prepare": "husky"
  },
  "keywords": [
    "llm",
    "ai",
    "schema",
    "typescript",
    "validation",
    "structured-output",
    "openai",
    "openrouter",
    "claude",
    "gpt"
  ],
  "author": "Nadeesha Cabral",
  "license": "Apache-2.0",
  "type": "module",
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "dotenv": "^17.2.0"
  }
}